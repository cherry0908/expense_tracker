<div style="margin-left: 10px;">
	<h1>Expense Details</h1>

	<p>
	  <strong>Description:</strong>
	  <%= @expense.description %>
	</p>

	<p>
	  <strong>Amount:</strong>
	  <%= number_to_currency(@expense.amount)%>
	</p>
	 
	<p>
	  <strong>Datetime:</strong>
	  <%= @expense.created_at %>
